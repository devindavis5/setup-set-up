<div class="bg">
<div class="text">
<% flash.each do |key, v| %>
    <p style='color: red'> <%= v %></p>
<%end%>
<h1>Sign In</h1>
</div>
<hr/>
<div class="text">
<br></br>
<%= form_with model: @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f|%>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Sign in" %>
<%end%>
<br></br>
<br></br>
<a href="/users/new"<button type="button" class="btn btn-outline-dark btn-sm"> Create New User Instead</button></h1></a>
</div>
</div>