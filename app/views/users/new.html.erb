<% if flash[:errors] %>
<% flash[:errors].each do |e|%>
    <li style="color:red"><%= e %></li>
<%end%>
<%end%>

<h1>New User</h1>
<%= form_for @user do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Create" %>
<%end%>
