    <%= select "fan", "id", @fans.map{|c| [c.description, c.id]}, {}, data: { behavior: 'category_dropdown' }  %><div style="height:5px;font-size:1px;">&nbsp;</div>
    <br>
    <%= f.submit %>
<% end %>
</div>
